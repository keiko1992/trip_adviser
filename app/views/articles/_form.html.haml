= form_for @article do |f|
  - if @article.errors.any?
    #error_explanation
      %h2= "#{pluralize(@article.errors.count, "error")} prohibited this article from being saved:"
      %ul
        - @article.errors.full_messages.each do |msg|
          %li= msg

  .field
    = f.label :user
    = f.text_field :user
  .field
    = f.label :title
    = f.text_field :title
  .field
    = f.label :content
    = f.text_area :content
  .field
    = f.label :place
    = f.text_field :place
  .field
    = f.label :slug
    = f.text_field :slug
  .field
    = f.label :published
    = f.check_box :published
  .field
    = f.label :published_at
    = f.datetime_select :published_at
  .field
    = f.label :daleted_at
    = f.datetime_select :daleted_at
  .actions
    = f.submit 'Save'
