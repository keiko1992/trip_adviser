- title "Sign Up"

#user-authentification.container
  .col-md-4.col-md-offset-4
    %h2= title
    = form_for(resource, as: resource_name, url: registration_path(resource_name)) do |f|
      = devise_error_messages!
      .row
        .field.col-md-6
          = f.label :first_name
          = f.text_field :first_name, class: "form-control", required: true
        .field.col-md-6
          = f.label :last_name
          = f.text_field :last_name, autofocus: true, class: "form-control", required: true
      .row
        .field.col-md-12
          = f.label :email
          = f.email_field :email, class: "form-control", required: true
      .row
        .field.col-md-12
          = f.label :password
          - if @minimum_password_length
            = f.password_field :password, autocomplete: "off", class: "form-control", required: true, placeholder: "#{@minimum_password_length}+ letters"
          - else
            = f.password_field :password, autocomplete: "off", class: "form-control", required: true
      .field
        = f.label :password_confirmation
        - if @minimum_password_length
          = f.password_field :password_confirmation, autocomplete: "off", class: "form-control", required: true, placeholder: "#{@minimum_password_length}+ letters"
        - else
          = f.password_field :password_confirmation, autocomplete: "off", class: "form-control", required: true
      .row
        .field.col-md-12
          = f.label :city
          = f.text_field :city, class: "form-control", required: true
      .actions.text-center.mb-10
        = f.submit "Sign Up", class: "btn btn-pc"
    .text-center= render "users/shared/links"
