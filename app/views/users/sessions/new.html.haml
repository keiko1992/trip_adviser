- title "Sign In"

#user-authentification.container
  .col-md-4.col-md-offset-4
    %h2= title
    = form_for(resource, as: resource_name, url: session_path(resource_name)) do |f|
      .field
        = f.label :email
        = f.email_field :email, autofocus: true, class: "form-control", required: true
      .field
        = f.label :password
        = f.password_field :password, autocomplete: "off", class: "form-control", required: true
      - if devise_mapping.rememberable?
        .field
          = f.check_box :remember_me
          = f.label :remember_me
      .actions.text-center.mb-10
        = f.submit "Sign In", class: "btn btn-pc"
    .text-center= render "users/shared/links"
